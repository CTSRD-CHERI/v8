clang_use_chrome_plugins              = false
is_clang                              = true
is_component_build                    = true
use_aura                              = true
use_lld                               = true
use_custom_libcxx                     = false

# RelWithDebInfo equivalent
is_debug                              = true
v8_optimized_debug                    = true

# We hit a lot of errors since we're compiling for ~unsupported platforms
treat_warnings_as_errors              = false

v8_use_snapshot                       = false
v8_use_external_snapshot_data         = false

# Disable WASM for now.
v8_enable_webassembly                 = false

# Uncompressed build
v8_enable_pointer_compression         = false
v8_enable_external_code_space         = false
v8_enable_sandbox                     = false
v8_enable_sandboxed_external_pointers = false

# Needed because we don't use the wrapper on FreeBSD Morello builds.
clang_base_path                       = "/usr/local64"
#cc_wrapper                            = "env CCACHE_PREFIX=distcc CCACHE_SLOPPINESS=time_macros ccache" # Uncomment for distcc and ccache
extra_cxxflags                        = "-I/usr/include -I/usr/include/c++/v1 --target=aarch64c-unknown-freebsd -mabi=purecap -march=morello -Xclang -morello-vararg=new"
extra_cflags                          = "-I/usr/include -I/usr/include/c++/v1 --target=aarch64c-unknown-freebsd -mabi=purecap -march=morello -Xclang -morello-vararg=new"
extra_ldflags                         = "-mabi=purecap"

cppgc_enable_young_generation         = true
arm_control_flow_integrity            = "none"
cppgc_enable_caged_heap               = true
v8_annotate_torque_ir                 = true
v8_enable_slow_dchecks                = true
v8_enable_snapshot_code_comments      = false # broken on purecap
v8_verify_deterministic_mksnapshot    = false # broken on purecap
v8_value_deserializer_hard_fail       = true
v8_enable_verify_csa                  = false # broken on purecap
